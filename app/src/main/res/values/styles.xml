<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Your app theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... other style attributes ... -->
    </style>

    <!-- Custom style for the menu items -->
    <style name="MyMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:itemBackground">@drawable/bg_menu_item</item>
    </style>

    <!-- Custom text appearance for the menu items -->
    <style name="MyMenuTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/secondary_theme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
</resources>